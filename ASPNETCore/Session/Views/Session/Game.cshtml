@{
    ViewData["Title"] = "Home Page";
}

@model User

<div>
    <form action="logout" method="post">
        
        <button>Logout</button>
    </form>
    <h1>Welcome, @Context.Session.GetString("UserName")</h1>
    <div>
        <h2>@Context.Session.GetInt32("Count")</h2>
    </div>
    <div>
        <div class='d-flex'>
            <form action="counterProcess" method="post">
                <input hidden value="+1" name="mathfunction"/>
                <button>+1</button>
            </form>
            <form action="counterProcess" method="post">
                <input hidden value="-1" name="mathfunction"/>
                <button>-1</button>
            </form>
        </div>
        <div class='d-flex'>
            <form action="counterProcess" method="post">
                <input hidden value="x2" name="mathfunction"/>
                <button>x2</button>
            </form>
            <form action="counterProcess" method="post">
                <input hidden value="random" name="mathfunction"/>
                <button>+Random</button>
            </form>
        </div>
    </div>
</div>