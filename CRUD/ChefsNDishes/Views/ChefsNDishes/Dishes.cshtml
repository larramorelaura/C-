@{
    ViewData["Title"] = "Dishes";
}

@model List<Dish>

<div>
    @await Html.PartialAsync("_NavLinks", new ChefsNDishes.Models.ViewModel{CurrentView="Dishes"} )
    <h1>Check out our dishes!</h1>
    <table class="table table-striped">
        <thead>
            <th>Name</th>
            <th>Chef</th>
            <th>Tastiness</th>
            <th>Calories</th>
        </thead>
        <tbody>
            @foreach(Dish? d in Model)
            {
                <tr>
                    <td>@d.Name</td>
                    <td>@d.Chef.FirstName</td>
                    <td>@d.Tastiness</td>
                    <td>@d.Calories</td>
                </tr>
            }
        </tbody>
    </table>
</div>